  ABK_KURSE
  VORLESUNG_UEBUNG
  WISSENSCHAFTLICHER_GRUNDLAGENKURS
  GRUNDKURS
  SPRACHKURS
  SPRACHLEHRVERANSTALTUNG
  KOLLOQUIUM
  FORSCHUNGSKOLLOQUIUM
  OBERSEMINAR
  HAUPTSEMINAR
  PROSEMINAR
  PROJEKTSEMINAR
  INFOVERANSTALTUNG
  ANLEITUNG
  ORIENTIERUNGSEINHEIT
  PRAKTIKUM_MIT_INTEGRIERTEM_SEMINAR
  PRAKTIKUM
  SEMINAR_UEBUNG_VORLESUNG
  SEMINAR_UEBUNG
  INTEGRIERTE_VERANSTALTUNG
  EINFUEHRUNGSVORLESUNG
  EINFUEHRUNGSKURS
  LEKTUEREKURS
  LEKTUERESEMINAR
  STILUEBUNG
  BLOCKLEHRVERANSTALTUNG
  MUSIKALISCHE PRAXIS
