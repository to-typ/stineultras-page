generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//================
model Veranstaltung {
  id          Int               @id @default(autoincrement())
  stineId     String
  name        String
  stineName   String
  typ         VeranstaltungsTyp
  lehrende    String
  termine     Termin[]          
  uebungen    Uebungsgruppe[]
  semesterId  Int
  semester    Semester          @relation(fields: [semesterId], references: [id])
}

model Termin {
  id               Int            @id @default(autoincrement())
  nummer           Int 
  raum             String
  tag              DateTime
  startZeit        DateTime       @db.Time
  endZeit          DateTime       @db.Time
  veranstaltungsId Int?           
  veranstaltung    Veranstaltung? @relation(fields: [veranstaltungsId], references: [id])
  uebungsId        Int?           
  uebung           Uebungsgruppe? @relation(fields: [uebungsId], references: [id])
}

model Uebungsgruppe {
  id               Int           @id @default(autoincrement())
  name             String     
  veranstaltungsId Int           
  veranstaltung    Veranstaltung @relation(fields: [veranstaltungsId], references: [id])
  termine          Termin[]      
}

model Semester {
  id              Int             @id @default(autoincrement())
  name            String
  veranstaltungen Veranstaltung[]
}

